<%= render_card title: "Sign up", subtitle:'Create a new acccount', class:'m-auto' do %>

<%= render_form_for(resource, as: resource_name, url: registration_path(resource_name), class:'space-y-2') do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em class="text-sm">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%= render_button variant: :default, type: :submit, class:'my-2' do %>
      Sign Up
      <i class="fa fa-sign-in ml-2" aria-hidden="true"></i>
    <% end %>
<% end %>

<footer class="text-sm"><%= render "devise/shared/links" %></footer>

<% end %>
