<%# Hero Section %>
<section class="bg-blue-600 text-white py-20">
  <div class="container mx-auto text-center">
    <h1 class="text-5xl font-bold">Welcome to Our Learning Management System</h1>
    <p class="mt-4 text-lg">Elevate your learning experience with our user-friendly platform.</p>
    
    <% if user_signed_in? %>
      <%= render_button variant: :default, as: :link, href: dashboard_path do %>
        Continue as <%= current_user.name.presence || current_user.email %>
      <% end %>
    <% else %>
      <%= render_button variant: :default, as: :link, href: '/users/sign_in' do %>
        Sign In
    <% end %>
    <% end %>
  </div>
</section>

<%# Features Section %>
<section class="py-20 bg-gray-100">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-bold">Features</h2>
    <div class="mt-10 grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="p-6 bg-white rounded-lg shadow">
        <h3 class="text-xl font-semibold">Interactive Courses</h3>
        <p class="mt-2">Engaging courses designed to keep learners interested and motivated.</p>
      </div>
      <div class="p-6 bg-white rounded-lg shadow">
        <h3 class="text-xl font-semibold">Progress Tracking</h3>
        <p class="mt-2">Easily monitor your progress and stay on top of your learning goals.</p>
      </div>
      <div class="p-6 bg-white rounded-lg shadow">
        <h3 class="text-xl font-semibold">Community Support</h3>
        <p class="mt-2">Join a vibrant community for discussions, support, and knowledge sharing.</p>
      </div>
    </div>
  </div>
</section>

<%# Pricing Section %>
<section class="py-20">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-bold">Pricing</h2>
    <div class="mt-10 grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="p-6 bg-white rounded-lg shadow">
        <h3 class="text-xl font-semibold">Free Plan</h3>
        <p class="mt-2">Access to basic courses and community forums.</p>
        <p class="mt-4 text-lg font-bold">$0/month</p>
      </div>
      <div class="p-6 bg-white rounded-lg shadow">
        <h3 class="text-xl font-semibold">Pro Plan</h3>
        <p class="mt-2">Unlock premium courses and features for advanced learning.</p>
        <p class="mt-4 text-lg font-bold">$29/month</p>
      </div>
      <div class="p-6 bg-white rounded-lg shadow">
        <h3 class="text-xl font-semibold">Business Plan</h3>
        <p class="mt-2">Custom solutions for organizations and teams.</p>
        <p class="mt-4 text-lg font-bold">Contact us</p>
      </div>
    </div>
  </div>
</section>
